{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-jsx",
    "strict": true
  },
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "update": "deno run -A --node-modules-dir npm:vite update",
    "run-build": "deno run -A --unstable --node-modules-dir ./serve.js",
    "stop-build": "deno run -A ./stop.js"
  },
  "imports": {
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react",
    "react": "react",
    "react-dom": "npm:react-dom"
  }
}